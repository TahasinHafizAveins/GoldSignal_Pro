<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space10dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        style="@style/SpecificCornerRounded"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/black">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/gsp_banner" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space8dp"
        android:layout_marginTop="@dimen/space10dp"
        android:layout_marginBottom="@dimen/space4dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_signal_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_details_signal_status"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_details_signal_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="@dimen/space4dp"
            android:text=""
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

    </RelativeLayout>



    <TextView
        android:id="@+id/tv_signal_details_tp_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space8dp"
        android:layout_marginBottom="@dimen/space4dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_signal_details_tp_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space8dp"
        android:layout_marginBottom="@dimen/space4dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_signal_details_stop_lose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space8dp"
        android:layout_marginBottom="@dimen/space4dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space8dp"
        android:layout_marginTop="@dimen/space10dp"
        android:layout_marginBottom="@dimen/space4dp">

        <TextView
            android:id="@+id/tv_signal_details_profit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trade Status: "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_signal_details_profit_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space4dp"
            android:layout_toEndOf="@id/tv_signal_details_profit_title"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_signal_details_profit_pips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space8dp"
        android:layout_marginBottom="@dimen/space4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_signal_details_profit_pips_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_signal_details_profit_pips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space4dp"
            android:layout_toEndOf="@id/tv_signal_details_profit_pips_title"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_signal_details_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space8dp"
        android:layout_marginBottom="@dimen/space4dp"
        android:layout_marginTop="@dimen/space10dp"
        android:drawableLeft="@drawable/ic_clock_24"
        android:drawablePadding="@dimen/space4dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/space4dp"
        android:layout_marginTop="@dimen/space10dp"
        android:layout_marginHorizontal="@dimen/space4dp"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_warning"
            android:layout_marginBottom="@dimen/space6dp"
            android:layout_marginHorizontal="@dimen/space4dp"
            android:layout_gravity="bottom"/>
        <TextView
            android:id="@+id/tv_waring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space2dp"
            android:text="@string/trade_waring"
            android:textColor="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:padding="@dimen/space4dp"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>